uniform float time;
void main () {
    vec3 custom_colour = vec3(0.2, 0.1, 0.6);
    vec3 custom_colour2 = vec3(0.15, 0.1, 0.6);

    vec3 shading = calc_shading();

    FragColour = mix(custom_colour, custom_colour2, sin(time) + 0.5) + shading;
    BrightColour = custom_colour2; // custom bloom for example
    // BrightColour = vec3(0,0,0); // no bloom on diamond for example
}